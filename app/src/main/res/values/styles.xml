<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dusty_blue</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
    </style>


    <style name="LogInFilledEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@color/dusty_blue</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_grey</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="FlatRoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">30dp</item>
        <item name="backgroundColor">@color/orange</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>